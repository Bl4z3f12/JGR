CREATE TABLE IF NOT EXISTS notifications (
    id INT AUTO_INCREMENT PRIMARY KEY,
    type VARCHAR(50) NOT NULL COMMENT 'Notification type (e.g., new, update)',
    message TEXT NOT NULL COMMENT 'Notification content',
    date DATETIME NOT NULL COMMENT 'Creation timestamp',
    `read` TINYINT(1) DEFAULT 0 COMMENT '0=unread, 1=read',
    name VARCHAR(255) NOT NULL COMMENT 'User who triggered the notification',
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    updated_at DATETIME DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Add index for frequently queried fields
ALTER TABLE notifications ADD INDEX idx_read_status (`read`);
ALTER TABLE notifications ADD INDEX idx_notification_type (type);